{
  "compilerOptions": {
  
    "target": "es2016", 
    
    "module": "commonjs", 
    "rootDir": "./src",     
    "moduleResolution": "node", 
    "baseUrl": "./",  
    "paths": {
      "@AppServer": ["src/common/AppServer"]
    },                              
    "outDir": "./build",    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}